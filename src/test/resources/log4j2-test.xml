<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Properties>
        <Property name="baseDir">logs</Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFile"
                     fileName="logs/stock-stats-test.log"
                     filePattern="logs/$${date:yyyy-MM}-test/stock-stats-test-%d{yyyy-MM-dd-HH}-%i.log"
                     immediateFlush="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %p %logger{1} - %msg%n</Pattern>
            </PatternLayout>
            <DefaultRolloverStrategy>
                <Delete basePath="%{baseDir}" maxDepth="1">
                    <IfFileName glob="stock-stats-test*.log"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
            <TimeBasedTriggeringPolicy interval="1d"/>
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d %p %logger{1}: %m%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>